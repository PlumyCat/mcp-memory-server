# Azure CosmosDB Configuration
COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_KEY=your-primary-key
COSMOS_DATABASE_NAME=memory_system
COSMOS_CONTAINER_CONVERSATIONS=conversations
COSMOS_CONTAINER_ENTITIES=entities
COSMOS_CONTAINER_GRAPH=graph

# Graph Database (Gremlin API)
GREMLIN_ENDPOINT=wss://your-account.gremlin.cosmos.azure.com:443/
GREMLIN_DATABASE=memory_graph
GREMLIN_COLLECTION=entities

# Vector Store (ChromaDB)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=memory_embeddings

# LLM Configuration
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

# Memory System Settings
MAX_CONVERSATION_HISTORY=1000
ENTITY_EXTRACTION_THRESHOLD=0.7
SIMILARITY_THRESHOLD=0.8
AUTO_CLEANUP_DAYS=30

# Development
NODE_ENV=development
LOG_LEVEL=info
